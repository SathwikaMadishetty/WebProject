<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.hibernate.Employee" table="EmployeeInfo">
    <id name="empId" column="empId" /> <!-- primary key -->
    <property name="empName" column="empName" />
    <property name="salary" column="emp_salary" />
  </class>
</hibernate-mapping>

<!-- A primary key is unique and not null and used to identify a row uniquely -->